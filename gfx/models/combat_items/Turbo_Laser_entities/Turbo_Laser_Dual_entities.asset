# PROJECTILE
entity = {
	name = "Heavy_TL_turbolaser_entity"
	pdxmesh = "turbolaser_mesh"
	
	default_state = "idle"
	state = { name = "idle" }
	
	locator = { name = "bolt1" rotation = { 0 0 0 } position = { 0.25 0 0 } }
	locator = { name = "bolt2" rotation = { 0 0 0 } position = { -0.25 0 0 } }

	attach = { bolt1 = "Heavy_TL_turbolaser_bolt_entity" }
	attach = { bolt2 = "Heavy_TL_turbolaser_bolt_entity" }
	
	scale = 1.0
}



